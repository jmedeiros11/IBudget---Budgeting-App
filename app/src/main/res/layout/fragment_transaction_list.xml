<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:background="@color/background_primary">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/transactionListNavBar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/background_secondary">

                <TextView
                    android:id="@+id/transactionListNavTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transaction List"
                    android:textColor="@color/white"
                    android:fontFamily="@font/figerona_bold"
                    android:textSize="18sp"
                    android:layout_centerInParent="true"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:id="@+id/dropDownMenuTransactionList"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:boxStrokeColor="@color/foreground_primary"
                app:boxBackgroundColor="@android:color/transparent"
                android:textColorHint="@color/foreground_primary"
                android:background="@android:color/transparent"
                app:hintTextColor="@color/foreground_primary"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                app:endIconTint="@color/foreground_primary">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/tvAutoCompleteTransactionList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:hintTextColor="@color/foreground_primary"
                    android:textColorHint="@color/foreground_primary"
                    android:layout_weight="1"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:text="Select"
                    android:hint="Category"
                    android:fontFamily="@font/figerona_medium"
                    android:inputType="none"
                    android:textSize="12sp"
                    android:textColor="@color/foreground_primary" />


            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/tvTitleTransactionList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Transactions"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/figerona_bold"
                android:textSize="18sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTransactionList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:background="@drawable/category_inactive"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="15dp"
                android:paddingBottom="20dp"
                android:layout_marginBottom="60dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>