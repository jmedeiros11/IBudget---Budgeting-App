<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:gravity="center|top">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/alert_box_background"
            android:outlineAmbientShadowColor="@color/black">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/figerona_bold"
                android:textColor="@color/white"
                android:text="Sign Out?"
                android:layout_gravity="center"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/figerona_regular"
                android:textColor="@color/foreground_primary"
                android:text="@string/confirm_signout"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnSignOutCancel"
                    android:layout_width="85dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/figerona_bold"
                    android:text="Cancel"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_marginRight="40dp"/>
                <Button
                    android:id="@+id/btnSignOutConfirm"
                    android:layout_width="85dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/figerona_bold"
                    android:backgroundTint="@color/foreground_primary"
                    android:text="Yes"
                    android:textSize="12sp"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>