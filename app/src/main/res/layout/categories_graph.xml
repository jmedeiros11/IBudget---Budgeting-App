<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/borderContainerItemGraph"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/category_inactive"
        android:backgroundTint="@color/foreground_primary"
        android:orientation="horizontal"
        android:padding="3dp">
        <RelativeLayout
            android:id="@+id/containerItemGraph"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/category_inactive"
            android:backgroundTint="@color/orangeCategory"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivIconItemGraph"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_gravity="left|center"
                android:layout_marginStart="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_chart_box"
                android:backgroundTint="@color/white" />

            <TextView
                android:id="@+id/tvTitleItemGraph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ivIconItemGraph"
                android:layout_centerInParent="true"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/figerona_bold"
                android:text="Groceries"
                android:maxWidth="130dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvAmountItemGraph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/figerona_bold"
                android:text="$200.00"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>

</layout>