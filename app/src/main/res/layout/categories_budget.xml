<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/containerMyBudgets"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/category_inactive"
        android:backgroundTint="@color/orangeCategory"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivCategoryIconMyBudgets"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_gravity="left|center"
            android:layout_marginStart="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_chart_box"
            android:backgroundTint="@color/white" />

        <TextView
            android:id="@+id/tvBudgetNameMyBudgets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ivCategoryIconMyBudgets"
            android:layout_centerInParent="true"
            android:layout_marginStart="40dp"
            android:fontFamily="@font/figerona_bold"
            android:text="Groceries"
            android:maxWidth="100dp"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvBudgetAmountMyBudgets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/ivGoButton"
            android:layout_centerInParent="true"
            android:layout_marginRight="25dp"
            android:fontFamily="@font/figerona_bold"
            android:text="$200.00"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/ivGoButton"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_gravity="left|center"
            android:layout_marginStart="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_chevron_right"
            android:backgroundTint="@color/white" />

    </RelativeLayout>
</layout>